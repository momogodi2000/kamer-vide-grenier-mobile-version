# Kamer Vidé Grenier Mobile App Environment Variables
# Copy this file to .env and fill in your actual values

# Backend API Configuration
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30000

# Authentication
JWT_SECRET=your-jwt-secret-here

# Payment Gateway Configuration
# Noupia Payment Gateway
NOUPIA_API_KEY=your-noupia-api-key
NOUPIA_SECRET_KEY=your-noupia-secret-key
NOUPIA_ENVIRONMENT=sandbox

# Campay Payment Gateway
CAMPAY_API_KEY=your-campay-api-key
CAMPAY_SECRET_KEY=your-campay-secret-key
CAMPAY_ENVIRONMENT=sandbox

# Stripe Payment Gateway
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Firebase Configuration (if needed for push notifications)
# FIREBASE_API_KEY=your-firebase-api-key
# FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_STORAGE_BUCKET=your-project.appspot.com
# FIREBASE_MESSAGING_SENDER_ID=123456789
# FIREBASE_APP_ID=1:123456789:web:abcdef123456

# App Configuration
APP_NAME=Kamer Vidé Grenier
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# Logging
LOG_LEVEL=debug

# Security
ENCRYPTION_KEY=your-encryption-key-here

# Analytics (optional)
# ANALYTICS_TRACKING_ID=your-analytics-id

# Support Contact
SUPPORT_EMAIL=support@kamervidegrenier.com
SUPPORT_PHONE=+237-XXX-XXX-XXX
